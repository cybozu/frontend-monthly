---
import type { TopicByMonth } from "../pages/lookback/[slug].astro"

export interface Props {
  topics: TopicByMonth[]
}

const { topics } = Astro.props
---

<section class="timeline">
  {
    topics.map(topic => (
      <section class="topics">
        <div class="month-row">
          <h2 class="month-dot">{topic.month}æœˆ</h2>
        </div>
        <div class="row">
          <ul class="topic">
            {topic.topics.map(topic => (
              <li class="topic-row">
                <a
                  class="topic-link"
                  href={topic.url}
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  {topic.title}
                </a>
              </li>
            ))}
          </ul>
          <div class="notable">
            {topic.notableTopics.map(topic => (
              <section class="notable-row">
                <h3 class="notable-header">
                  {topic.url ? (
                    <a
                      class="notable-title-link"
                      href={topic.url}
                      target="_blank"
                      rel="noopener noreferrer"
                    >
                      {topic.title}
                    </a>
                  ) : (
                    <span class="notable-title">{topic.title}</span>
                  )}
                </h3>
                <div>{topic.overview}</div>
              </section>
            ))}
          </div>
        </div>
      </section>
    ))
  }
</section>

<style lang="scss">
  .timeline {
    position: relative;
    display: grid;
    grid-template-columns: 1fr;
    grid-gap: 1rem;
    padding: 1rem 0;
    margin-bottom: 40px;
    box-sizing: border-box;

    &::before {
      content: "";
      position: absolute;
      top: 0;
      left: 50%;
      width: 4px;
      height: 100%;
      background-color: var(--color-surface-mixed-200);
      transform: translateX(-50%);
    }

    @media screen and (max-width: 800px) {
      display: none;
      content-visibility: hidden;
    }
  }

  .month-row {
    position: relative;
    height: 30px;
  }
  .month-dot {
    position: absolute;
    display: grid;
    place-items: center;
    top: 50%;
    left: 50%;
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background-color: var(--color-primary-0);
    border: 4px solid var(--color-surface-mixed-100);
    transform: translate(-50%, -50%);
    font-size: 15px;
    font-weight: normal;
    margin: 0;
  }
  .row {
    position: relative;
    display: flex;
    gap: 1rem;
    padding: 2rem 0 1rem;
    margin-bottom: 1rem;
    box-sizing: border-box;
  }

  .notable {
    display: flex;
    flex-direction: column;
    align-items: end;
    gap: 60px;
    flex-basis: 50%;
  }

  .notable-row {
    display: flex;
    flex-direction: column;

    gap: 10px;
    max-width: 700px;
    margin-left: 14px;
    padding: 0.8rem;
    background-color: var(--color-surface-mixed-200);
    border-radius: 4px;
  }
  .notable-title-link {
    color: var(--color-primary-300);
    text-decoration: none;
    font-size: 1.2rem;
    font-weight: bold;

    &:hover {
      text-decoration: underline;
    }
  }

  .notable-header {
    margin: 0;
  }
  .notable-title {
    font-weight: bold;
    font-size: 1.2rem;
  }

  .topic {
    flex-basis: 50%;
    display: flex;
    flex-direction: column;
    gap: 40px;
    list-style: none;
    margin: 0;
    padding: 0;
    align-items: flex-end;
  }
  .topic-row {
    position: relative;
    display: flex;
    gap: 10px;
    &:after {
      content: "";
      display: block;
      position: absolute;
      top: 2px;
      right: -20px;
      width: 16px;
      height: 16px;
      border-radius: 50%;
      background-color: var(--color-surface-mixed-400);
      border: 4px solid var(--color-surface-mixed-100);
    }
  }
  .topic-link {
    text-decoration: none;
    color: var(--color-primary-300);
    font-size: 1.2rem;
    line-height: 1.5;
    margin-right: 20px;
    text-align: right;
    &:hover {
      text-decoration: underline;
    }

    &:focus-visible {
      outline: 2px solid var(--color-primary-600);
      border-radius: 2px;
    }
  }
  .topic-date {
    padding-top: 4px;
    min-width: 94px;
    color: var(--color-surface-mixed-600);
    font-size: 1rem;
    white-space: nowrap;
  }

  .topics:nth-of-type(even) {
    .row {
      flex-direction: row-reverse;
    }
    .topic {
      align-items: flex-start;
    }
    .topic-row {
      &:after {
        left: -20px;
      }
    }
    .topic-link {
      margin-right: 0;
      margin-left: 20px;
      text-align: left;
    }
    .notable {
      align-items: flex-end;
      .notable-row {
        align-items: flex-end;
        margin-right: 14px;
        margin-left: 0;
      }
    }
  }
</style>
