---
import { getCollection } from 'astro:content';
import Layout from "../layouts/Layout.astro"
import dayjs from "dayjs"

const posts = await getCollection('posts');
const contents = await Promise.all(posts.map(async post => {
      const pagePath = `./posts/${post.slug}`
      const date = dayjs(post.data.date).format("YYYY/MM/DD")
      const title = `#${post.data.no} - ${date}`

      const aa = await post.render();


      const headings = aa.headings.
        filter(heading => heading.depth === 3)

      return { pagePath, title, headings }
    })
    .reverse())
---

<Layout title="Cybozu Frontend Monthly">
  <h1 class="title">Cybozu Frontend Monthly</h1>
  <ul class="posts">
    {
      contents.map(content => {
        return (
          <li class="post">
            <a href={content.pagePath}>
              <h2>{content.title}</h2>
              <ul>
                {content.headings.slice(0, 8).map(heading => {
                  return <li>{heading.text}</li>
                })}
                {content.headings.length > 8 && <li>ä»–</li>}
              </ul>
            </a>
          </li>
        )
      })
    }
  </ul>
</Layout>

<style lang="scss">
  .title {
    padding-bottom: 0.3em;
    border-bottom: 1px solid #eaecef;
    font-size: 2em;
    font-weight: 600;
