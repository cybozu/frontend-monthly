  }
  .post {
    a {
      display: block;
      padding-bottom: 24px;
      text-decoration: none;
      color: #0366d6;
      &:hover {
        text-decoration: none;
      }
    }
    ul {
      color: #24292e;
      padding-left: 2em;
    }
    li + li {
      margin-top: 0.25em;
    }
    h2 {
      margin-top: 24px;
      margin-bottom: 16px;
      font-weight: 600;
